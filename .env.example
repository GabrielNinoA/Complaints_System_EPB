# Variables de configuración para el Sistema de Quejas Boyacá
# Copia este archivo a .env para desarrollo local
# Para Render, configura estas variables en el dashboard

# ===========================================
# CONFIGURACIÓN DE SERVIDOR
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# BASE DE DATOS MYSQL (CLEVER CLOUD)
# ===========================================
MYSQL_ADDON_DB="tu_nombre_de_base_de_datos"
MYSQL_ADDON_HOST="tu_host_mysql.services.clever-cloud.com"
MYSQL_ADDON_PASSWORD="tu_contraseña"
MYSQL_ADDON_PORT="puerto"
MYSQL_ADDON_URI="mysql://usuario:contraseña@host:puerto/base_datos"
MYSQL_ADDON_USER="tu_usuario"
MYSQL_ADDON_VERSION="8.4"

# Variables alternativas para compatibilidad
DB_HOST="tu_host_mysql.services.clever-cloud.com"
DB_PORT="puerto"
DB_USER="tu_usuario"
DB_PASSWORD="tu_contraseña"
DB_NAME="tu_nombre_de_base_de_datos"
DATABASE_URL="mysql://usuario:contraseña@host:puerto/base_datos"

# ===========================================
# SEGURIDAD (¡CAMBIAR EN PRODUCCIÓN!)
# ===========================================
JWT_SECRET="tu_clave_secreta_jwt_muy_larga_y_segura"
SESSION_SECRET="tu_clave_secreta_session_muy_larga_y_segura"

# ===========================================
# EMAIL (OPCIONAL - PARA NOTIFICACIONES)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_de_aplicacion
EMAIL_FROM="Sistema Quejas Boyacá <noreply@quejas-boyaca.gov.co>"
EMAIL_TO=admin@quejas-boyaca.gov.co
EMAIL_SECURE=false
ENABLE_EMAIL_NOTIFICATIONS=true

# ===========================================
# NOTAS PARA RENDER:
# ===========================================
# 1. NODE_ENV debe ser "production"
# 2. PORT será asignado automáticamente por Render
# 3. No incluyas comillas en los valores en Render
# 4. Genera claves JWT/SESSION seguras para producción
# 5. Ver archivo RENDER_ENV_VARS.md para lista completa
