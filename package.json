{
  "name": "sistema-quejas-boyaca-v2",
  "version": "2.1.0",
  "description": "Sistema de gestión de quejas para entidades públicas de Boyacá - Versión Reestructurada",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd frontend && npm ci && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:frontend": "cd frontend && npm ci",
    "deploy": "npm run build && npm start",
    "prebuild": "echo 'Iniciando build del frontend...'",
    "postbuild": "echo 'Build completado. Archivos generados en frontend/build'",
    "init-db": "node scripts/init-db.js",
    "health": "node scripts/health-check.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "quejas",
    "boyaca",
    "gobierno",
    "ciudadanos",
    "mysql",
    "express",
    "render",
    "clever-cloud"
  ],
  "author": "Gobierno de Boyacá",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.0.0",
    "mysql2": "^3.6.0",
    "compression": "^1.7.4",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-usuario/sistema-quejas-boyaca.git"
  },
  "homepage": "https://quejas-boyaca.onrender.com",
  "nodemonConfig": {
    "ignore": [
      "logs/",
      "node_modules/",
      "coverage/",
      "*.log"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
